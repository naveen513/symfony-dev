{% extends 'base.html.twig' %}


{% block body %}
    <div class="row">
        <h2 class="page-header pull-left"> List Url</h2>
        <div class="btn-group pull-right">
            <a href="{{ path('url_export_yaml') }}" class="btn btn-success">Export to YAML</a>
            <a href="{{ path('url_create') }}" class="btn btn-primary">Create</a>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>Id</td>
                <td>Title</td>
                <td>Domain</td>
                <td>Url</td>
                <td>Status</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        {%  for url in urls %}
            <tr>
                <td>{{ url.id }}</td>
                <td>{{ url.title }}</td>
                <td>{{ url.domain }}</td>
                <td>{{ url.url }}</td>
                <td>{{ url.status }}</td>
                <td>{{ url.status }}</td>
                <td>
                    <a href="{{ path('url_update', {'id':url.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="{{ path('url_delete', {'id':url.id}) }}"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        {%  endfor %}
        </tbody>
    </table>
{% endblock %}


